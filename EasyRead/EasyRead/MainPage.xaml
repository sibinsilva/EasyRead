<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyRead.MainPage" Background="white">

    <StackLayout>
        <Label x:Name="lbl_NoInternet" BackgroundColor="Red" TextColor="White" HorizontalTextAlignment="Center"></Label>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text=" Welcome to EazyRead " HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
        </Frame>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="This app is free to use and requires a stable internet connection." HorizontalTextAlignment="Center" TextColor="White" FontSize="Small"/>
        </Frame>
        <Button BackgroundColor="#2196F3" TextColor="White" Text="Agree" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Clicked="Button_ClickedAsync" FontSize ="Medium"/>
    </StackLayout>

</ContentPage>
